<div class="modal fade" id="updateRolesModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        @using (Html.BeginForm("Register", "Account", new { area = "" }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dismiss="modal"><i class="fa fa-times"></i></button>*@
                    <h4 class="modal-title" id="updateRolesHeader">Update Roles</h4>
                </div>
                <div class="modal-body">

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="col-md-7">
                                    <label class="control-label">Dish Washer:</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" class="margin-top-15" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-7">
                                    <label class="control-label">Server:</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" class="margin-top-15" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-7">
                                    <label class="control-label">Cook:</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" class="margin-top-15" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-7">
                                    <label class="control-label">Drive Thru:</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" class="margin-top-15" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-7">
                                    <label class="control-label">Manager:</label>
                                </div>
                                <div class="col-md-2">
                                    <input type="checkbox" class="margin-top-15" />
                                </div>
                            </div>
                        </div>
                    </div>



                    @*<div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input type="submit" class="btn btn-default" value="Register" />
                            </div>
                        </div>*@

                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-success pull-right" value="Update Roles" />
                    <button type="button" class="btn btn-danger pull-right" data-dismiss="modal" style="margin-right: 15px;">Cancel</button>
                </div>
            </div>
        }

    </div>
</div>
