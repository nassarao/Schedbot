@using (Html.BeginForm("SaveAvailability","Users"))
{
    <div class="col-md-7 col-sm-12">
        <div class="col-md-12 col-sm-12">
            <div class="portlet light">
                <div class="portlet-title tabbable-line">
                    <div class="caption font-schedBot">Availability</div>
                </div>
                <div class="portlet-body table-responsive">
                            <form class="form-horizontal">
                                <table class="table table-striped table-hover">
                                    <thead>
                                        <tr>
                                            <th class="col-md-1"></th>
                                            <th class="col-md-1 text-center">Sun</th>
                                            <th class="col-md-1 text-center"">Mon</th>
                                            <th class="col-md-1 text-center"">Tues</th>
                                            <th class="col-md-1 text-center"">Wed</th>
                                            <th class="col-md-1 text-center"">Thurs</th>
                                            <th class="col-md-1 text-center"">Fri</th>
                                            <th class="col-md-1 text-center"">Sat</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr class="text-center">
                                            <td class="col-md-1"><b>AM</b></td>
                                            <td class="col-md-1"><input name="sun-am" type="checkbox"/></td>
                                            <td class="col-md-1"><input name="mon-am" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="tue-am" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="wed-am" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="thu-am" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="fri-am" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="sat-am" type="checkbox" /></td>
                                        </tr>
                                        <tr class="text-center">
                                            <td class="col-md-1"><b>PM</b></td>
                                            <td class="col-md-1"><input name="sun-pm" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="mon-pm" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="tue-pm" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="wed-pm" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="thu-pm" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="fri-pm" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="sat-pm" type="checkbox" /></td>
                                        </tr>
                                        <tr class="text-center">
                                            <td class="col-md-1"><b>BOTH</b></td>
                                            <td class="col-md-1"><input name="sun-both" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="mon-both" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="tue-both" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="wed-both" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="thu-both" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="fri-both" type="checkbox" /></td>
                                            <td class="col-md-1"><input name="sat-both" type="checkbox" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                                <button type="submit" class="btn btn-block btn-outline green-meadow sbold">Save Availability</button>
                            </form>

                </div>
            </div>
        </div>
    </div>

}