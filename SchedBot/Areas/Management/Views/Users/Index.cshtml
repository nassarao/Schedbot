<script>
    $(document).ready(function () {
        $('#addEmployee').click(function () {
            var url = $('#addEmployeeModal').data('url');

            $.get(url, function (data) {
                $('#addModalContainer').html(data);

                $('#addEmployeeModal').modal('show');
            });
        });
    });
</script>
