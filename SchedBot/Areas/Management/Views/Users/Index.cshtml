<script src="~/Scripts/jquery-1.10.2.js"></script>


<script>
    $(document).ready(function () {
        $('#addEmployee').click(function () {
            $('#addEmployeeModal').modal('show');
        });
        $('.deleteEmployee').click(function () {
            console.info("Made inside delete click...");
            $('#employeeDeleteModal').modal('show');
            var firstName = $(this).data('firstname');
            var lastName = $(this).data('lastname');
            var userId = $(this).data('userid');
            console.log("user in modal: ", firstName, lastName, userId);
            $('#employeeName').html("<b>" + firstName + " " + lastName + "</b>");
        });
    });
    var item_to_delete;
    var name;
    $(".deleteItem").click(function (e) {
        item_to_delete = $(this).data('id');
        var firstName = $(this).data('firstname');
        var lastName = $(this).data('lastname');
        name = firstName + " " + lastName;
        $('#employeeName').html("<b>" + firstName + " " + lastName + "</b>");
    });
    $('#btnContinueDelete').click(function () {
        //window.location = "Delete/" + item_to_delete;
        $.ajax({
            url: '@Url.Action("Delete", "Users")'
            , type: "POST"
            , data: {
                id: item_to_delete
            }
            , success: function (response) {
                $('#basic').modal('toggle');
                // alert("Successfully deleted user: " + name);
                //swal("Employee Deleted", "You successfully deleted " + name, "success")
                //swal({
                //    title: "Success!"
                //    , text: "You successfully deleted " + name + " from the list of employees"
                //    , type: "success"
                //    , showCancelButton: false
                //    , confirmButtonText: "Ok"
                //    , closeOnConfirm: false
                //    , closeOnCancel: false
                //}, function (isConfirm) {
                //    if (isConfirm) {
                //        location.reload();
                //    }
                //});

                swal({
                    title: 'Success!',
                    text: "You successfully deleted " + name + " from the list of employees",
                    type: 'success',
                    showCancelButton: false,
                    confirmButtonText: 'OK'
                }).then(function () {
                    location.reload();
                })
                
            }
            , error: function (response) {
            $('#basic').modal('toggle');
                sweetAlert("Oops...", "Something went wrong!", "error");
            }
        });
    });
</script>