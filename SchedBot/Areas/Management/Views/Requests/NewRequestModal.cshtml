@model SchedBot.Areas.Management.Models.RequestViewModel

<div class="modal fade" id="requestNewModal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        @using (Html.BeginForm("CreateRequest", "Requests"))
            {
          //  @Html.HiddenFor(model => model.user.UserId)

            <div class="modal-content">
                <div class="modal-header">
                    @*<button type="button" class="close" data-dismiss="modal"><i class="   fa fa-times"></i></button>*@
                    <h4 class="modal-title" id="requestNewHeader">New Request</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <div class="col-md-4">
                            <label class="control-label">Request Type:</label>
                        </div>
                        <div class="col-md-8 no-padding">
                            <div class="col-md-12 no-padding">


                                <select class="form-control" id="newRequestType">
                                    <option value selected disabled></option>
                                    <option value="trade">Trade</option>
                                    <option value="timeOff">Time Off</option>
                                </select>
                            </div>

                        </div>
                    </div>


                    <div class="margin-top-10" id="newRequestHTML"></div>

                    <div class="form-group" id="timeOffRange">
                        <div class="col-md-4">
                            <label class="control-label">Select Desired Time Off:</label>
                        </div>
                        <div class="col-md-8">
                            <div class="col-md-12">
                                <div class="input-group" id="defaultrange" name="daterange">
                                    <input type="text" class="form-control" name="daterange" />
                                    <span class="input-group-btn"><button class="btn btn-default date-range-toggle" name="daterange" type="button"><i class="fa fa-calendar"></i></button></span>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-md-12">
                            <label class="control-label">Reason For Request:</label>
                        </div>
                        <div class="col-md-12">
                            <textarea name ="requestReason" class="form-control" rows="5"></textarea>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <input type="submit" class="btn btn-primary pull-right" value="Submit Request" />
                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal" style="margin-right: 15px;">Cancel</button>
                </div>
            </div>
        }

    </div>
</div>