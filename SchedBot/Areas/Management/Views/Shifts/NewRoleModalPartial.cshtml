<div class="modal fade" id="roleNewModal" role="dialog">
    <div class="modal-dialog"> 
        <!-- Modal content-->
        @using(Html.BeginForm("CreateJobRole", "JobRole", FormMethod.Post, new { @class = "form-horizontal", role = "form"}))
            {
         // @Html.HiddenFor(model => model.user.UserId)
        <div class="modal-content">
            <div class="modal-header"> @*
                <button type="button" class="close" data-dismiss="modal"><i class="   fa fa-times"></i></button>*@
                <h4 class="modal-title" id="roleNewHeader">New Role</h4> </div>
            <div class="modal-body">
                <div class="form-group">
                    <div class="col-md-4">
                        <label class="control-label">Role Name:</label>
                    </div>
                    <div class="col-md-8 no-padding">
                        <div class="col-md-12 no-padding">
                            <input type="text" class="form-control" id="roleName" /> </div>
                    </div>
                </div>
                <div class="margin-top-10" id="newRoleHTML"></div>
                <div class="form-group">
                    <div class="col-md-12 col-sm-12">
                        <label class="control-label">Role Description:</label>
                    </div>
                    <div class="col-md-12 col-sm-12 no-padding">
                        
                            <textarea class="form-control" id="roleDescription" rows="3"></textarea>
                        
                    </div>
                </div>
                
                
            </div>
            <div class="modal-footer">
                <input type="submit" class="btn btn-primary pull-right" value="Add Role" />
                <button type="button" class="btn btn-default pull-right" data-dismiss="modal" style="margin-right: 15px;">Cancel</button>
            </div>
        </div> } </div>
</div>